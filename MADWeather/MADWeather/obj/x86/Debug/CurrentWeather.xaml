<Page x:ConnectionId='1'
    x:Class="MADWeather.CurrentWeather"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MADWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <StackPanel Margin="50">
        <!--<Button x:Name="GetWeatherButton" Content="Get Weather Data" Margin="50" Click="GetWeatherButton_Click"/> -->
        <TextBlock x:ConnectionId='2' x:Name="CityTextBlock" HorizontalAlignment="Center" FontSize="20" FontFamily="Segoe UI Light" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="Auto">
            <Image x:ConnectionId='4' Height="128" Width="128" x:Name="WeatherImage"/>
            <TextBlock x:ConnectionId='5' x:Name="WeatherTextBlock" Margin="0,20,0,0" FontSize="84" FontFamily="Segoe UI Light" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock x:ConnectionId='3' x:Name="WeatherDescriptionTextBlock" FontSize="24" HorizontalAlignment="Center" />

    </StackPanel>
</Page>

